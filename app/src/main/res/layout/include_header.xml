<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <EditText
        android:id="@+id/discover_search_et"
        style="@style/SearchHeaderEtStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:cursorVisible="false"
        android:focusable="false"
        app:layout_constraintWidth_percent="0.8"
        android:hint="@string/discover_search_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/discover_search_iv"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_scan"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@id/discover_search_et"
        app:layout_constraintTop_toTopOf="@id/discover_search_et"
        app:layout_constraintLeft_toRightOf="@id/discover_search_et"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>