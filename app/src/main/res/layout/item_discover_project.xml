<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/ivTitle"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCollect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/article_un_collect"
        app:layout_constraintBottom_toBottomOf="@id/ivTitle"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:text="描述"
        android:textColor="@color/text_2"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/ivTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvNameData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:text="2020-03-14 | zskingking"
        android:textColor="@color/text_3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/ivTitle"
        app:layout_constraintLeft_toRightOf="@id/ivTitle" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="标题"
        android:textStyle="bold"
        android:textColor="@color/text_1"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/ivTitle"
        app:layout_constraintTop_toTopOf="@id/ivTitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/division_line"
        app:layout_constraintTop_toBottomOf="@+id/ivTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>
